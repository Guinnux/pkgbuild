pkgname=libserconf
pkgver=1.3.1
pkgrel=2
pkgdesc="KSES Serial Configuration Library"
arch=('i686' 'x86_64')
license=('LGPL')
url="http://www.guinnux.org"
depends=('libklog' 'libxml2' 'gnxid')
install=serconf.install
source=('libserconf::git+http://bugz.kses.net/gitrepo/KLib/serconf.git')
md5sums=('SKIP')

options=('strip' '!staticlibs')


pkgver()
{

  cd $srcdir/$pkgname

  autoreconf -fi > /dev/null
  
  readarray -t lines <<<"$(./configure --version)"
  versionarray=(${lines[0]// / })
  echo ${versionarray[2]}
}

build()
{
  cd $srcdir/$pkgname
  ./configure --host=$CHOST \
              --prefix=/usr 
              
  make              
}

package()
{
  cd $srcdir/$pkgname
  make DESTDIR=$pkgdir install
  rm $pkgdir/usr/lib/*.la
}
