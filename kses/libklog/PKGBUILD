pkgname=libklog
pkgver=20151102
pkgrel=1
pkgdesc="KSES Logging, tracing and debug library"
arch=('i686' 'x86_64')
license=('LGPL')
url="http://www.guinnux.org"
groups=('base' 'rescue')
depends=('log4cpp')
source=('libklog::git+http://bugz.kses.net/gitrepo/KLib.git')
md5sums=('SKIP')

options=('strip' '!staticlibs')


pkgver()
{
  date +%Y%m%d
}

prepare()
{
  cd $srcdir/$pkgname/$pkgname
  echo "I'm at $srcdir/$pkgname/$pkgname"
  autoreconf -fi
}

build()
{
  cd $srcdir/$pkgname/$pkgname
  ./configure --host=$CHOST \
              --prefix=/usr 
              
  make              
}

package()
{
  cd $srcdir/$pkname/$pkgname
  make DESTDIR=$pkgdir install
}
