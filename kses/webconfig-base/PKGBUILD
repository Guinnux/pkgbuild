pkgname=webconfig-base
pkgver=2.6.0
pkgrel=1
pkgdesc="Guinnux webconfig base"
arch=('any')
license=('GPL')
url="http://www.guinnux.org"
groups=('base')
depends=('lua' 'lighttpd' 'lsqlite3' 'lua-filesystem')
source=('webconfig-base::git+http://bugz.kses.net/gitrepo/Guinnux/kses.git'
        'gnx5-conf.patch'
        'gnx5-network.patch'
        'gnx5-dhcpd.patch')
      
md5sums=('SKIP'
         'a3c658ce6cd2d25909b5b4ee95869aa8'
         '33ee9b02efc49ec0b9f384f4bc8d7c7d'
         '313f99795092f31fb03af7bb0f720d3a')
                
prepare()
{
	cd $srcdir/$pkgname
	patch -p0 < $srcdir/gnx5-conf.patch
	patch -p0 < $srcdir/gnx5-network.patch
	patch -p0 < $srcdir/gnx5-dhcpd.patch
}


package()
{
cd $srcdir/$pkgname/webconfig/guinnux_web_base
cp -dvR ./srv "$pkgdir"/
  
}
