pkgname=libkdb
pkgver=1.2.3
pkgrel=1
pkgdesc="KSES bject Persistence Interface library"
arch=('i686' 'x86_64')
license=('LGPL')
url="http://www.guinnux.org"
depends=('sqlite3')
source=('libkdb::git+http://bugz.kses.net/gitrepo/KLib/kdb.git')
md5sums=('SKIP')

options=('strip' '!staticlibs')


pkgver()
{

  cd $srcdir/$pkgname

  autoreconf -fi > /dev/null
  
  readarray -t lines <<<"$(./configure --version)"
  versionarray=(${lines[0]// / })
  echo ${versionarray[2]}
}

build()
{
  cd $srcdir/$pkgname
  ./configure --host=$CHOST \
              --prefix=/usr 
              
  make              
}

package()
{
  cd $srcdir/$pkgname
  make DESTDIR=$pkgdir install
  rm $pkgdir/usr/lib/*.la

}
